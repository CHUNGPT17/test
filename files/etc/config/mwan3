
config globals 'globals'
	option mmx_mask '0x3F00'

config policy 'wan_only'
	list use_member 'wan_1'
	option last_resort 'unreachable'

config rule 'youtube'
	option proto 'all'
	option sticky '0'
	option ipset 'youtube'
	option use_policy 'vpn'
	option family 'ipv4'

config rule 'direct'
	option proto 'all'
	option sticky '0'
	option ipset 'direct'
	option use_policy 'wan_only'

config rule 'redirect'
	option proto 'all'
	option sticky '0'
	option use_policy 'vpn_hk'

config rule 'https'
	option sticky '1'
	option dest_port '443'
	option proto 'tcp'
	option use_policy 'wan_only'

config rule 'default_rule_v4'
	option dest_ip '0.0.0.0/0'
	option use_policy 'wan_only'
	option family 'ipv4'
	option proto 'all'
	option sticky '0'

config rule 'default_rule_v6'
	option dest_ip '::/0'
	option use_policy 'wan_only'
	option family 'ipv6'
	option proto 'all'
	option sticky '0'

config interface 'wan'
	option enabled '1'
	option initial_state 'online'
	list track_ip '8.8.8.8'
	list track_ip '8.8.4.4'
	option track_method 'ping'
	option reliability '1'
	option count '1'
	option size '56'
	option max_ttl '60'
	option timeout '4'
	option interval '10'
	option failure_interval '5'
	option recovery_interval '5'
	option down '5'
	option up '5'
	option family 'ipv4'

config member 'wan_1'
	option interface 'wan'
	option metric '1'
	option weight '1'

config member 'wan_2'
	option interface 'wan'
	option metric '2'
	option weight '2'

config policy 'vpn'
	option last_resort 'unreachable'
	list use_member 'wan_vpn1'
	list use_member 'wan_2'

config interface 'wireguard1'
	option enabled '1'
	option initial_state 'online'
	list track_ip '8.8.8.8'
	list track_ip '8.8.4.4'
	option track_method 'ping'
	option reliability '1'
	option count '1'
	option size '56'
	option max_ttl '60'
	option timeout '4'
	option interval '10'
	option failure_interval '5'
	option recovery_interval '5'
	option down '5'
	option up '5'
	option family 'ipv4'

config member 'wan_vpn1'
	option interface 'wireguard1'
	option metric '1'
	option weight '1'

config interface 'wireguard'
	option enabled '1'
	option initial_state 'online'
	option family 'ipv4'
	list track_ip '8.8.8.8'
	option track_method 'ping'
	option reliability '1'
	option count '1'
	option size '56'
	option max_ttl '60'
	option timeout '4'
	option interval '10'
	option failure_interval '5'
	option recovery_interval '5'
	option down '5'
	option up '5'

config member 'wan_hk'
	option interface 'wireguard'
	option metric '1'
	option weight '1'

config policy 'vpn_hk'
	option last_resort 'unreachable'
	list use_member 'wan_hk'
	list use_member 'wan_2'

